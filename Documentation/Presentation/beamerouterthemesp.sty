\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{sp}[1][]
{
\begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle}
\if@doNoTopLine
\begin{tikzpicture}[remember picture,overlay]
\ifx\insertframesubtitle\@empty%
  {\node[black, font=\large] at (\paperwidth/2, -0.11){\insertframetitle};}
\else%
  {\node[black,font=\large] at (\paperwidth/2, 0.31){\insertframetitle};%
  \node[black, font=\small] at (\paperwidth/2, -0.11){\insertframesubtitle};}%
\fi
\end{tikzpicture}
\else
\begin{tikzpicture}[remember picture,overlay]
\fill[spblue] (1.8, -0.5) rectangle(\paperwidth/2+5cm, -0.4);
\ifx\insertframesubtitle\@empty%
  {\node[anchor=west, black, font=\large] at (1.8, -0.11){\insertframetitle};}
\else%
  {\node[anchor=west, black,font=\large] at (1.8, 0.31){\insertframetitle};%
  \node[anchor=west, black, font=\small] at (1.8, -0.11){\insertframesubtitle};}%
\fi
\end{tikzpicture}
\fi
\end{beamercolorbox}
}

\mode<all>